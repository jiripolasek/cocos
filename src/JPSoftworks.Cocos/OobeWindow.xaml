<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="JPSoftworks.Cocos.OobeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <controls:TitleBar x:Name="OobeTitleBar"
                           AutoConfigureCustomTitleBar="True"
                           Title=""
                           CanDrag="True"
                           Content="Welcome" />
        <ScrollViewer Grid.Row="1">
            <StackPanel Margin="32" Spacing="16">
                <Image Source="ms-appx:///Assets/StoreLogo.svg"
                       Stretch="Uniform"
                       Height="140" />
                <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                           HorizontalAlignment="Stretch"
                           HorizontalTextAlignment="Center"
                           Text="Welcome to Contextual Companions" />
                <TextBlock TextWrapping="Wrap"
                           Text="Contextual Companions are a friendly, context-aware AI companions that lives in your system tray. Use it for quick, contextual chat with the active window, while sticky note mode remains a lightweight alternative. Each companion gets a cute animal emoji identity so you can spot them at a glance." />
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}"
                           Text="Hotkeys" />
                <StackPanel Spacing="6">
                    <TextBlock Text="- Win+Shift+K: Create or summon a companion note" />
                    <TextBlock Text="- Win+Shift+J: Open the notes tab for the active companion" />
                    <TextBlock Text="- Ctrl+Tab: Switch between chat and notes" />
                    <TextBlock Text="- Ctrl+Enter: Send the prompt" />
                    <TextBlock Text="- Ctrl+Shift+P: Refocus the parent window" />
                    <TextBlock Text="- Ctrl+Shift+C: Copy last assistant result" />
                    <TextBlock Text="- Ctrl+Shift+V: Paste last assistant result" />
                </StackPanel>
                <StackPanel Margin="0,12,0,0"
                            Spacing="8"
                            HorizontalAlignment="Center">
                    <Button Content="Continue"
                            TabIndex="0"
                            MinWidth="180"
                            Style="{StaticResource AccentButtonStyle}"
                            Click="OnContinueClicked" />
                    <HyperlinkButton Content="Open settings"
                                     HorizontalAlignment="Center"
                                     Click="OnOpenSettingsClicked" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
